<%= form_with class: "profile_edit_user_form", model: @user, url: admin_user_path(@user), method: :patch, local: true do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container-fluid  rounded bg-white mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Paramètres de profil</h4> </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels">Prénom</label>
                          <div class="field">
                            <%= form.text_field :first_name, class: 'form-control', placeholder: "first name" %>
                          </div>
                    </div>
                    <div class="col-md-6">
                        <label class="labels">Nom de famille</label>
                        <div class="field">
                          <%= form.text_area :last_name, class: "form-control" %>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <div class="field">
                          <%= form.label :phone_number %>
                          <%= form.text_area :phone_number, class: "form-control" %>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="field mt-2">
                          <%= form.label :address %>
                          <%= form.text_area :address, class: "form-control" %>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="field mt-2">
                          <%= form.label :email %>
                          <%= form.text_area :email, class: "form-control" %>
                        </div>
                    </div>
                </div>
                
                <div class="mt-5 text-center">
                    <%= form.submit class: "btn btn-primary profile-button"%>
                </div>
            </div>
        </div>
        <div class="col-md-5">
          <% if @user.avatar.attached? %>
              <div class="d-flex flex-column align-items-center text-center p-3 py-5"><%= image_tag @user.avatar, class: "card-img-top" %></div>
          <% end %>
          <div class="field">
            <%= form.file_field :avatar %>
          </div>
        </div>
    </div>
</div>
</div>
</div>

<% end %>
