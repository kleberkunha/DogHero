<!-- Content Start -->
<div class="container-fluid content">
    <!-- Sale & Revenue Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4 d-flex justify-content-center">
            <div class="">
                <div class="bg-dark rounded d-flex align-items-center justify-content-between p-4">
                    <div class="ms-3 ">
                        <p class="mb-2 text-white">NÂ¤ Users</p>
                        <h6 class="mb-0 text-center text-white"><%= @user.count %></h6>
                    </div>
                </div>
            </div>
            <div class=" ml-2">
                <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                    <div class="ms-3">
                        <p class="mb-2 text-white">Total Events</p>
                        <h6 class="mb-0 text-center text-white"><%= @events.count %></h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Sale & Revenue End -->
    <!-- Recent Sales Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="bg-secondary text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h6 class="mb-0 text-white">Users</h6>
            </div>
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-white">
                            <th scope="col">Name</th>
                            <th scope="col">last name</th>
                            <th scope="col">phone number</th>
                            <th scope="col">created date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @user.each do |user| %>
                            <tr>
                                <td><%= user.first_name %></td>
                                <td><%= user.last_name %></td>
                                <td><%= user.phone_number %></td>
                                <td><%= user.created_at %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Recent Sales End -->


    <!-- Widgets Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-sm-12 col-md-6 col-xl-8 ">
                <div class="bg-secondary rounded p-4 testing-scrool">
                    
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <h6 class="mb-0 text-white">Events</h6>
                    </div>
                    <% @events.each do |event| %>
                        <div class="d-flex align-items-center border-bottom py-3 events-adm-page ">
                            <img class="rounded-circle flex-shrink-0" src="img/user.jpg" alt="" >
                            <% if event.avatar.attached? %>
                                <%= image_tag event.avatar, width: "100%", style:"width: 40px; height: 40px;", class:"rounded-circle flex-shrink-0" %>
                            <% end %>
                            <div class="w-100 ms-3 ml-3">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-0"><%= event.title %></h6>
                                    <small><%= event.created_at %></small>
                                </div>
                                <span><%= event.description %></span>
                            </div>
                        </div>
                    <% end %>
       
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-xl-4">
                <div class="h-100 bg-secondary rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h6 class="mb-0">To Do List</h6>
                        <a href="">Show All</a>
                    </div>
                    <div class="d-flex mb-2">
                        <input class="form-control bg-dark border-0" type="text" placeholder="Enter task">
                        <button type="button" class="btn btn-primary ms-2">Add</button>
                    </div>
                    <div class="d-flex align-items-center border-bottom py-2">
                        <input class="form-check-input m-0" type="checkbox">
                        <div class="w-100 ms-3">
                            <div class="d-flex w-100 align-items-center justify-content-between">
                                <span>Short task goes here...</span>
                                <button class="btn btn-sm"><i class="fa fa-times"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex align-items-center border-bottom py-2">
                        <input class="form-check-input m-0" type="checkbox">
                        <div class="w-100 ms-3">
                            <div class="d-flex w-100 align-items-center justify-content-between">
                                <span>Short task goes here...</span>
                                <button class="btn btn-sm"><i class="fa fa-times"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex align-items-center border-bottom py-2">
                        <input class="form-check-input m-0" type="checkbox" checked>
