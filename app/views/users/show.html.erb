<div class="container-fluid">
    <div class="main-body">
    
          <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <%=link_to 'Edit my informations', edit_user_path %>
                <%=link_to 'Change Password', edit_user_registration_path %>
                <% if @user.admin? %>
                    <%=link_to 'Admin Page', admin_path %>
                <% end %>
              <li class="breadcrumb-item active" aria-current="page">
                <%= link_to "Add new dog", new_dog_path%></li>

            </ol>
          </nav>
    
          <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <% if @user.avatar.attached? %>
                            <%= image_tag @user.avatar, width: "100%" %>
                        <% end %>
                        <div class="mt-3">
                        <h4><%= @user.first_name%></h4>
                        </div>
                    </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">Full Name</h6>
                            <%= @user.first_name%>&nbsp<%= @user.last_name%>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Email</h6>
                                <%= @user.email%>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Phone</h6>
                                <%= @user.phone_number%>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Address</h6>
                                <%= @user.address%>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">User :</h6>
                            <%= @user.role%>
                        </li>
                    </ul>
                </div>
                
                
            </div>
            <div class="col-md-8">
                <div class="container dog-area">

                    <% @dogs.each do |dog| %>
                        <div class="card row flex-row">
                            <% if dog.avatar.attached? %>
                                <%= image_tag dog.avatar, width: "70%", class:"col-lg-4 card-img-start img-fluid p-0" %>
                            <% end %>
                            <div class="col-lg-8 card-body">
                                <h1 class="card-title">Name : <%= dog.name%></h1>
                                <p>Age : <%= dog.age%></p>  &nbsp <p>Castrado ?</p>
                                <p>Macho ou femea</p>
                                <p class="card-text">Dog description : <%= dog.description%></p>

                                <% if dog.user_id === current_user.id%>
                                    <div class="col-sm-12 btn-edit-dog">
                                        <%=link_to 'Edit profile', edit_dog_path(dog.id) %>
                                    </div>
                                <% end %>
                            </div>

                        </div>
                    <% end %>
                </div>
            </div>

            <div class="container-fluid mx-auto container-dogs d-flex p-0 ">
                <div class="row col-md-6 m-0 p-0 my-events p-0">
                    <% @events.each do |event| %>
                        <div class="col-md-4 p-1">

                            <div class="card" style="width: 18rem;">
                                <% if event.avatar.attached? %>
                                    <%= image_tag event.avatar, width: "100%" %>
                                <% else %>
                                    <img class="card-img-top" src="https://www.intermountainpet.com/hubfs/Blog_Images/Dog-watching-car-drive-awayFB.jpg" alt="Card image cap">
                                <% end %>
                                <div class="card-body">
                                    <h5 class="card-title"><%= event.title %></h5>
                                    <p class="card-text"><%= event.body %></p>
                                    <h5>Start: <%= event.start_date %></h5>
                                    <h5>Ends: <%= event.start_date %></h5>
                                    <h5>Price: <%= event.price %></h5>
                                    <h4>Creator: <%= event.user_id %></h4>
                                    <a href="#" class="btn btn-primary"><%= link_to 'show', event %></a>
                                    <a href="#" class="btn btn-primary"><%= link_to 'Edit', edit_event_path(event) %></a>
                                    <%= button_to "DELETE EVENT", event_path(:id => event.id), :method => :delete, class:"unsubscribe-button w-100" %>

                                </div>
                            </div>  
                        </div>

                    <% end %>
                </div>
                <hr/>
                <div class="row col-md-6 m-0 p-0 my-events-subscribe">
                    <% @subscribed_events.each do |event| %>
                        <div class="col-md-4 ">
                            <div class="card" style="width: 18rem;">
                                <% if event.avatar.attached? %>
                                    <%= image_tag event.avatar, width: "100%" %>
                                <% else %>
                                    <img class="card-img-top" src="https://www.intermountainpet.com/hubfs/Blog_Images/Dog-watching-car-drive-awayFB.jpg" alt="Card image cap">
                                <% end %>
                                <div class="card-body">
                                    <h5 class="card-title"><%= event.title %></h5>
                                    <p class="card-text"><%= event.body %></p>
                                    <h5>Start: <%= event.start_date %></h5>
                                    <h5>Ends: <%= event.start_date %></h5>
                                    <h5>Price: <%= event.price %></h5>
                                    <h4>Creator: <%= event.user_id %></h4>
                                    <a href="#" class="btn btn-primary"><%= link_to 'show', event %></a>
                                    <a href="#" class="btn btn-primary"><%= link_to 'Edit', edit_event_path(event) %></a>
                                    <%= button_to "DELETE EVENT", event_path(:id => event.id), :method => :delete, class:"unsubscribe-button w-100" %>

                                </div>
                            </div>     
                        </div>
                    <% end %>
                </div>
                <hr/>
            </div>
        </div>
    </div>
</div>























