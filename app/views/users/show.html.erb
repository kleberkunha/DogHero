<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<div class="container">
    <div class="main-body">
    
          <!-- Breadcrumb -->
          <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="index.html"><%=link_to 'Home', root_path %></a></li>
              <li class="breadcrumb-item active" aria-current="page">User Profile</li>
            </ol>
          </nav>
          <!-- /Breadcrumb -->
    
          <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                        <div class="mt-3">
                        <h4><%= @user.first_name%></h4>
                        </div>
                    </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">Full Name</h6>
                            <%= @user.first_name%>&nbsp<%= @user.last_name%>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Email</h6>
                                <%= @user.email%>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Phone</h6>
                                <%= @user.phone_number%>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Address</h6>
                                <%= @user.address%>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Description</h6>
                                <%= @user.description%>
                        </li>
                    </ul>
                </div>
                <%=link_to 'Edit my informations', edit_user_registration_path %>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <% @dogs.each do |dog| %>
                        <div class="card-body d-flex">
                            <div class="card dog_image_profile ">
                                    <img class="image_product" src="https://ichef.bbci.co.uk/news/976/cpsprodpb/17638/production/_124800859_gettyimages-817514614.jpg" alt="dog">
                            </div>
                            <div class="info_dog">
                                <div class="row">
                                    <div class="col-sm-3">
                                    <h6 class="mb-0">Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                    <%= dog.name%>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                    <h6 class="mb-0">Phone</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                    <%= dog.age%>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                    <h6 class="mb-0">Address</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                    <%= dog.description%>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                    <%=link_to 'Edit profile', edit_dog_path %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                    <%= link_to "Add new dog", new_dog_path%>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                        <h3 class="text-center">My events</h3>
                        <hr>
                        <%= link_to 'New Event', new_event_path %>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <h3 class="text-center">Events that i subscribe</h3>
                        <hr>
                    </div>
                </div>
            </div>
            <div class="container col-sm-12">
                <div class="row gutters-sm">
                    <div class="col-sm-6  my_event_user_profile mb-3">
                        <% @events.each do |event| %>
                            <div class="card h-100" style="width: 18rem;">
                                <img class="card-img-top" src="https://weezevent.com/wp-content/uploads/2019/08/27143613/woof-run-evenement-canin-1000x640.jpg" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title"><%= event.title %></h5>
                                    <p class="card-text"><%= event.body %></p>
                                    <h5>Start: <%= event.start_date %></h5>
                                    <h5>Ends: <%= event.start_date %></h5>
                                    <h5>Price: <%= event.price %></h5>
                                    <h4>Creator: <%= event.user_id %></h4>
                                    <a href="#" class="btn btn-primary"><%= link_to 'show', event %></a>
                                    <a href="#" class="btn btn-primary"><%= link_to 'Edit', edit_event_path(event) %></a>
                                    <a href="#" class="btn btn-primary"><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></a>
                                </div>
                            </div>
                        <% end %>
                    </div>





                    <div class="col-sm-6 mb-3">
                        <div class="card  h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">assignment</i>Project Status</h6>
                                <small>Web Design</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>Website Markup</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 72%" aria-valuenow="72" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>One Page</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 89%" aria-valuenow="89" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>Mobile Template</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 55%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>Backend API</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 66%" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>















