        <div class="row mt-4 d-flex">
          <div class="col-12 ">
            <div class="card mb-4 d-flex">
              <div class="">
                <div class="icon icon-shape icon-lg bg-gradient-success shadow text-center border-radius-xl mt-n3 ms-4">
                  <i class="material-icons opacity-10" aria-hidden="true">Users</i>
                </div>
              </div>

              <div class="col-lg-6 d-flex">
                <%= search_form_for @q do |f| %> 

                    <div class="field">
                      <%= f.label :name_cont, 'User Name' %>
                      <%= f.text_field :name_cont, class: 'form-control' %>
                    </div>
                  <% end %>


                <div class="container p-3">
                  <div class="row">
                    <ul class="list-group">
                      <% User.all.each do |user| %>
                        <li class="list-group-item" onclick="window.location.href='<%=user_path(user.id)%>'">User id : <%= user.id %> | <%= user.first_name %>&nbsp<%= user.last_name %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>

              
            </div>
          </div>
        </div>



        <div class="row mt-4 d-flex">
          <div class="col-12 ">
            <div class="card mb-4 d-flex">
              <div class="">
                <div class="icon icon-shape icon-lg bg-gradient-success shadow text-center border-radius-xl mt-n3 ms-4">
                  <i class="material-icons opacity-10" aria-hidden="true">Events</i>
                </div>
              </div>



              <div class="container col-lg-12 mt-3 p-3" style="overflow: scroll;">
                <div class="row col-lg-12" style="height: 345px;">
                  <% Event.all.each do |event| %>
                    <div class="col-sm-3 mb-3">
                      <div class="card" style="width: 100%;">
                        <div class="card-body">
                          <h5 class="card-title"><%= event.title %></h5>
                          <p class="card-text"><%= event.body %></p>
                          <h5>Start: <%= event.start_date %></h5>
                          <h5>Ends: <%= event.start_date %></h5>
                          <h5>Price: <%= event.price %></h5>
                          <h4>Creator: <%= event.user_id %></h4>
                          <% if user_signed_in? %>
                            <a href="#" class="btn btn-primary"><%= link_to 'show', event %></a>
                            <a href="#" class="btn btn-primary"><%= link_to 'Edit', edit_event_path(event) %></a>
                            <a href="#" class="btn btn-primary"><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></a>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
  

              
            </div>
          </div>
        </div>






